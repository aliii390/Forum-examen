{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
<main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 md:py-12">
    {# Section des catégories #}
    <div class="flex flex-wrap gap-3 justify-center mb-8 md:mb-12">
        <a href="#" class="transition-transform hover:scale-105">
            <span class="bg-orange-500 text-white px-4 py-1.5 rounded-full text-sm font-medium shadow-sm hover:bg-orange-600 transition-colors">Tech</span>
        </a>
        <a href="#" class="transition-transform hover:scale-105">
            <span class="bg-orange-500 text-white px-4 py-1.5 rounded-full text-sm font-medium shadow-sm hover:bg-orange-600 transition-colors">Programmation</span>
        </a>
        <a href="#" class="transition-transform hover:scale-105">
            <span class="bg-orange-500 text-white px-4 py-1.5 rounded-full text-sm font-medium shadow-sm hover:bg-orange-600 transition-colors">CyberSécurité</span>
        </a>
    </div>

    {# Conteneur des publications #}
    <div class="space-y-12 md:space-y-16">
        {% for question in publication %}
        <section class="flex justify-center">
            <article class="bg-white shadow-xl rounded-xl w-full max-w-2xl">
                {# En-tête avec l'avatar et les informations utilisateur #}
                <div class="p-6 md:p-8">
                    <div class="flex items-center gap-4 mb-6">
                        <img 
                            class="rounded-full w-12 h-12 sm:w-14 sm:h-14 object-cover border-2 border-orange-100" 
                            src="{{ asset('img/ammar.png') }}" 
                            alt="Photo de profil de {{ question.user.name }}"
                        />
                        <div class="flex-grow">
                            <h3 class="text-lg font-medium text-gray-900">{{ question.user.name }}</h3>
                            <p class="text-sm text-gray-500">il y a 3 min</p>
                        </div>
                        <div class="relative">
                            <button 
                                class="popup-toggle w-8 h-8 flex items-center justify-center rounded-full hover:bg-gray-100 transition-colors"
                                aria-label="Options"
                            >
                                <i class="fa-solid fa-plus text-gray-700 hover:text-orange-500 transition-colors"></i>
                            </button>
                            
                            {# Popup avec options #}
                            <div class="popup hidden absolute z-10 bg-white shadow-lg rounded-lg p-3 -right-2 mt-2 w-40 transition-opacity duration-200 opacity-0">
                                <div class="relative">
                                    {# Flèche du popup #}
                                    <div class="absolute w-3 h-3 bg-white transform rotate-45 -top-1.5 right-4"></div>
                                    
                                    {# Options du popup #}
                                    <div class="relative z-10 bg-white rounded-lg">
                                        <button class="w-full text-left py-2 px-2 rounded hover:bg-gray-50 text-sm text-gray-700 hover:text-orange-500 transition-colors flex items-center gap-2">
                                            <i class="fas fa-user-plus text-xs"></i>
                                            <span>Ajouter</span>
                                        </button>
                                        <button class="w-full text-left py-2 px-2 rounded hover:bg-gray-50 text-sm text-gray-700 hover:text-red-500 transition-colors flex items-center gap-2">
                                            <i class="fas fa-ban text-xs"></i>
                                            <span>Bloquer</span>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    {# Contenu de la question #}
                    <div class="mb-6">
                        <h2 class="text-xl sm:text-2xl font-bold text-gray-900 mb-3">{{ question.title }}</h2>
                        <p class="text-gray-700 leading-relaxed">{{ question.description }}</p>
                    </div>
                    
                    {# Catégorie et bouton d'action #}
                    <div class="flex flex-wrap items-center justify-between gap-4">
                        <span class="inline-block bg-gray-100 text-gray-700 px-3 py-1.5 rounded-lg text-sm font-medium">
                            {{ question.category.name }}
                        </span>
                        
                        <a href="{{ path('app_questions') }}" 
                           class="inline-flex items-center justify-center px-5 py-2.5
                                  text-sm font-medium
                                  text-white bg-orange-500 hover:bg-orange-600 
                                  rounded-lg transition-all duration-200
                                  transform hover:scale-105
                                  shadow-md hover:shadow-lg">
                            <span>En savoir plus</span>
                            <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                            </svg>
                        </a>
                    </div>
                </div>
            </article>
        </section>
        {% endfor %}
    </div>
    
    {# Message si aucune publication #}
    {% if publication|length == 0 %}
    <div class="text-center py-16">
        <p class="text-xl text-gray-500">Aucune question n'a été publiée pour le moment.</p>
    </div>
    {% endif %}
</main>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Ajouter les écouteurs d'événements pour tous les boutons de popup
    const toggleButtons = document.querySelectorAll('.popup-toggle');
    toggleButtons.forEach(button => {
        button.addEventListener('click', function(e) {
            e.stopPropagation();
            togglePopup(this);
        });
    });

    // Fermer les popups quand on clique en dehors
    document.addEventListener('click', function(e) {
        const popups = document.querySelectorAll('.popup:not(.hidden)');
        popups.forEach(popup => {
            if (!popup.contains(e.target) && !e.target.classList.contains('popup-toggle')) {
                hidePopup(popup);
            }
        });
    });
});

function togglePopup(button) {
    // Récupérer la popup associée au bouton
    const popup = button.nextElementSibling;
    
    // Fermer toutes les autres popups d'abord
    document.querySelectorAll('.popup:not(.hidden)').forEach(otherPopup => {
        if (otherPopup !== popup) {
            hidePopup(otherPopup);
        }
    });
    
    // Afficher ou cacher la popup actuelle
    if (popup.classList.contains('hidden')) {
        showPopup(popup);
    } else {
        hidePopup(popup);
    }
}

function showPopup(popup) {
    // D'abord, rendre visible la popup mais avec opacité 0
    popup.classList.remove('hidden');
    
    // Forcer un reflow pour que la transition fonctionne
    void popup.offsetWidth;
    
    // Puis ajouter l'opacité pour l'animation
    popup.classList.add('opacity-100');
    popup.classList.remove('opacity-0');
}

function hidePopup(popup) {
    // Diminuer l'opacité
    popup.classList.remove('opacity-100');
    popup.classList.add('opacity-0');
    
    // Attendre la fin de l'animation avant de cacher complètement
    setTimeout(() => {
        popup.classList.add('hidden');
    }, 200); // Cette durée doit correspondre à la durée de transition
}
</script>
{% endblock %}